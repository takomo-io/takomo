    "lodash.merge": "4.6.2",
    "lodash.takerightwhile": "4.6.0",
    "neverthrow": "4.3.1",
    "p-queue": "7.3.4",
    "pretty-ms": "8.0.0",
    "ramda": "0.28.0",
    "readdirp": "3.6.0",
    "semver": "7.5.4",
    "source-map-support": "0.5.21",

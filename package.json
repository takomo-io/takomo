    "@aws-sdk/middleware-retry": "3.374.0",
    "@aws-sdk/node-http-handler": "3.374.0",
    "@aws-sdk/types": "3.398.0",
    "chalk": "5.3.0",
    "cockatiel": "2.0.1",
    "date-and-time": "2.4.3",
    "diff": "5.1.0",
    "dotenv": "16.3.1",
    "dotenv-expand": "10.0.0",
    "easy-table": "1.2.0",
    "folder-hash": "4.0.4",
    "handlebars": "4.7.8",
    "inquirer": "9.1.5",
    "inquirer-autocomplete-prompt": "3.0.0",

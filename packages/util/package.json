{
  "name": "@takomo/util",
  "version": "4.2.0",
  "description": "Takomo Util",
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/takomo-io/takomo.git"
  },
  "license": "MIT",
  "author": "henri@takomo.io",
  "type": "commonjs",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build-if-changed": "../../ci/build-if-changed.sh",
    "clean:all": "rm -rf node_modules dist && rm -f yarn.lock && rm -rf .checksum",
    "clean:deps": "rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "depcheck": "depcheck --config=../../.depcheckrc",
    "test": "jest test --passWithNoTests --verbose",
    "watch": "tsc -p tsconfig.build.json --watch"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "date-and-time": "2.1.0",
    "diff": "5.0.0",
    "easy-table": "1.2.0",
    "handlebars": "4.7.7",
    "joi": "17.6.0",
    "js-yaml": "4.1.0",
    "json-stable-stringify": "1.0.1",
    "lodash.merge": "4.6.2",
    "p-queue": "6.6.2",
    "pretty-ms": "7.0.1",
    "ramda": "0.28.0",
    "strip-ansi": "6.0.0",
    "uuid": "8.3.2"
  },
  "engines": {
    "node": ">=14.17.1"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "publishConfig": {
    "access": "public"
  }
}

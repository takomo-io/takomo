{
  "name": "@takomo/util",
  "version": "3.0.0-alpha.1",
  "description": "Takomo Util",
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/takomo-io/takomo.git"
  },
  "license": "MIT",
  "author": "henri@takomo.io",
  "type": "commonjs",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build-if-changed": "../../ci/build-if-changed.sh",
    "clean:all": "rm -rf node_modules dist && rm -f yarn.lock",
    "clean:deps": "rm -rf node_modules",
    "clean:dist": "rm -rf dist",
    "depcheck": "depcheck --config=../../.depcheckrc",
    "test": "jest test --passWithNoTests --verbose",
    "watch": "tsc -p tsconfig.build.json --watch"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "date-and-time": "0.14.2",
    "deep-freeze-node": "1.1.3",
    "easy-table": "1.1.1",
    "handlebars": "4.7.6",
    "joi": "17.2.1",
    "js-yaml": "3.14.0",
    "pretty-ms": "5.1.0"
  },
  "engines": {
    "node": ">=14.4.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "publishConfig": {
    "access": "public"
  }
}

{
  "version": "2.2.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "integration-tests/*"
  ],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true
    }
  }
}

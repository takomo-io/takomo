{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ES2021", "dom"],
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*", "integration-test/**/*", "node_modules", "dist"],
}

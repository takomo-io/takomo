{
  "name": "takomo",
  "version": "9.0.0-alpha.0",
  "description": "Organize, configure and deploy CloudFormation stacks.",
  "keywords": [
    "aws",
    "cloudformation",
    "cfn",
    "deploy",
    "cli",
    "cloudformation templates",
    "cloudformation stacks",
    "cloudformation deployment"
  ],
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:takomo-io/takomo.git"
  },
  "license": "MIT",
  "author": "henri@takomo.io",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "takomo": "bin/tkm.mjs",
    "tkm": "bin/tkm.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.16.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects test --maxWorkers=2 --ci --verbose",
    "integration-test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects integration-test --maxWorkers=5 --ci --verbose",
    "single-integration-test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects integration-test --ci --verbose -i",
    "single-test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --ci --verbose -i",
    "clean": "rm -f package-lock.json && rm -rf node_modules && rm -rf dist",
    "clean-build": "npm run clean && npm install && npm run build",
    "depcheck": "depcheck"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --quiet --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        160
      ],
      "body-max-line-length": [
        0,
        "always",
        160
      ],
      "footer-max-line-length": [
        0,
        "always",
        160
      ]
    }
  },
  "devDependencies": {
    "ts-jest": "29.4.6",
    "@jest/globals": "30.2.0",
    "@aws-sdk/client-ec2": "3.988.0",
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@jest/console": "30.2.0",
    "@takomo/test-custom-helper-lowercase": "0.0.1",
    "@takomo/test-custom-helper-uppercase": "0.0.1",
    "@takomo/test-custom-resolver-code": "0.0.1",
    "@takomo/test-custom-resolver-name": "0.0.1",
    "@types/folder-hash": "4.0.4",
    "@types/jest": "30.0.0",
    "@types/jmespath": "0.15.2",
    "@types/js-yaml": "4.0.9",
    "@types/node": "22.14.1",
    "@types/ramda": "0.31.1",
    "@types/semver": "7.7.1",
    "@types/yargs": "17.0.35",
    "@types/ejs": "3.1.5",
    "@types/lodash": "4.17.23",
    "@typescript-eslint/eslint-plugin": "8.55.0",
    "@typescript-eslint/parser": "8.55.0",
    "depcheck": "1.4.7",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "@eslint/js": "9.39.2",
    "@eslint/eslintrc": "3.3.3",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-environment-testenv-recycler": "0.0.21",
    "jest-mock-extended": "4.0.0",
    "prettier": "3.8.1",
    "prettier-plugin-organize-imports": "4.3.0",
    "lint-staged": "16.2.7",
    "ts-node": "10.9.2",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "semantic-release": "25.0.3",
    "npm-check-updates": "19.3.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.988.0",
    "@aws-sdk/client-cloudtrail": "3.988.0",
    "@aws-sdk/client-organizations": "3.988.0",
    "@aws-sdk/client-s3": "3.988.0",
    "@aws-sdk/client-secrets-manager": "3.988.0",
    "@aws-sdk/client-ssm": "3.988.0",
    "@aws-sdk/client-sts": "3.988.0",
    "@aws-sdk/credential-providers": "3.988.0",
    "@smithy/middleware-retry": "2.3.1",
    "@smithy/node-http-handler": "2.5.0",
    "@aws-sdk/types": "3.973.1",
    "chalk": "5.6.2",
    "cockatiel": "3.2.1",
    "date-and-time": "4.2.0",
    "diff": "8.0.3",
    "dotenv": "17.2.4",
    "dotenv-expand": "12.0.3",
    "easy-table": "1.2.0",
    "folder-hash": "4.1.1",
    "handlebars": "4.7.8",
    "@inquirer/prompts": "8.2.0",
    "jmespath": "0.16.0",
    "joi": "18.0.2",
    "js-yaml": "4.1.1",
    "json-stable-stringify": "1.3.0",
    "neverthrow": "8.2.0",
    "p-queue": "8.1.1",
    "pretty-ms": "9.3.0",
    "ramda": "0.32.0",
    "readdirp": "5.0.0",
    "semver": "7.7.4",
    "source-map-support": "0.5.21",
    "ts-dedent": "2.2.0",
    "uuid": "13.0.0",
    "yargs": "18.0.0",
    "esbuild": "0.27.3",
    "ejs": "3.1.10",
    "lodash": "4.17.23"
  }
}

{
  "name": "takomo",
  "version": "6.0.0-alpha.0",
  "description": "Organize, configure and deploy CloudFormation stacks.",
  "keywords": [
    "aws",
    "cloudformation",
    "cfn",
    "deploy",
    "cli",
    "cloudformation templates",
    "cloudformation stacks",
    "cloudformation deployment"
  ],
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:takomo-io/takomo.git"
  },
  "license": "MIT",
  "author": "henri@takomo.io",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "takomo": "bin/tkm.mjs",
    "tkm": "bin/tkm.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.14.2"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects test --maxWorkers=2 --ci --verbose",
    "integration-test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects integration-test --maxWorkers=5 --ci --verbose",
    "clean": "rm -f package-lock.json && rm -rf node_modules && rm -rf dist",
    "clean-build": "npm run clean && npm install && npm run build",
    "depcheck": "depcheck"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        160
      ],
      "body-max-line-length": [
        0,
        "always",
        160
      ],
      "footer-max-line-length": [
        0,
        "always",
        160
      ]
    }
  },
  "devDependencies": {
    "ts-jest": "29.1.1",
    "@jest/globals": "29.6.4",
    "@aws-sdk/client-ec2": "3.405.0",
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "17.7.0",
    "@jest/console": "29.6.4",
    "@takomo/test-custom-helper-lowercase": "0.0.1",
    "@takomo/test-custom-helper-uppercase": "0.0.1",
    "@takomo/test-custom-resolver-code": "0.0.1",
    "@takomo/test-custom-resolver-name": "0.0.1",
    "@types/date-and-time": "0.13.0",
    "@types/diff": "5.0.3",
    "@types/folder-hash": "4.0.2",
    "@types/inquirer": "9.0.3",
    "@types/jest": "29.5.4",
    "@types/jmespath": "0.15.0",
    "@types/js-yaml": "4.0.5",
    "@types/json-stable-stringify": "1.0.34",
    "@types/lodash.merge": "4.6.7",
    "@types/lodash.takerightwhile": "4.6.7",
    "@types/node": "18.14.2",
    "@types/ramda": "0.28.23",
    "@types/semver": "7.5.1",
    "@types/uuid": "9.0.3",
    "@types/yargs": "17.0.22",
    "@types/ejs": "3.1.2",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "@types/inquirer-autocomplete-prompt": "3.0.0",
    "depcheck": "1.4.5",
    "eslint": "8.48.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.3",
    "jest": "29.6.4",
    "jest-environment-testenv-recycler": "0.0.21",
    "jest-mock-extended": "3.0.5",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "3.2.3",
    "pretty-quick": "3.1.3",
    "ts-node": "10.9.1",
    "typedoc": "0.25.0",
    "typescript": "5.2.2",
    "semantic-release": "21.1.1",
    "npm-check-updates": "16.13.2"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "3.405.0",
    "@aws-sdk/client-cloudtrail": "3.405.0",
    "@aws-sdk/client-organizations": "3.405.0",
    "@aws-sdk/client-s3": "3.405.0",
    "@aws-sdk/client-secrets-manager": "3.405.0",
    "@aws-sdk/client-ssm": "3.405.0",

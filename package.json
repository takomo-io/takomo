{
  "name": "takomo-project",
  "version": "0.0.1",
  "description": "Takomo monorepo",
  "author": "henri@takomo.io",
  "license": "MIT",
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/takomo-io/takomo.git"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "integration-tests/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean:dist": "lerna run 'clean:dist' --parallel",
    "clean:deps": "lerna run 'clean:deps' --parallel && rm -rf node_modules",
    "clean:all": "lerna run 'clean:all' --parallel && rm -rf node_modules && rm -f yarn.lock",
    "watch": "lerna run watch --parallel",
    "depcheck": "lerna run depcheck --parallel",
    "test": "lerna run test",
    "commit": "git-cz",
    "publish-version": "lerna version --exact",
    "publish-packages": "lerna publish from-package --create-release github --yes",
    "run-prettier": "prettier --write packages/**/*.ts",
    "api-docs": "typedoc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "commitizen": "4.1.2",
    "cz-lerna-changelog": "2.0.3",
    "depcheck": "0.9.2",
    "eslint": "7.10.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "3.1.0",
    "jest": "26.4.2",
    "jest-mock-extended": "1.0.10",
    "lerna": "3.22.1",
    "lint-staged": "9.5.0",
    "nodemon": "1.19.1",
    "prettier": "2.1.2",
    "prettier-plugin-organize-imports": "1.1.1",
    "ts-node": "9.0.0",
    "typedoc": "0.17.7",
    "typescript": "4.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}

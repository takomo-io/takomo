{
  "name": "@takomo/util",
  "version": "1.3.0",
  "description": "Takomo Util",
  "author": "henri@takomo.io",
  "license": "MIT",
  "os": [
    "darwin",
    "linux"
  ],
  "engines": {
    "node": ">=14.4.0"
  },
  "homepage": "https://takomo.io",
  "bugs": "https://github.com/takomo-io/takomo/issues",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/takomo-io/takomo.git"
  },
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean:dist": "rm -rf dist",
    "clean:deps": "rm -rf node_modules",
    "clean:all": "rm -rf node_modules dist && rm -f yarn.lock",
    "watch": "tsc -p tsconfig.build.json --watch",
    "depcheck": "depcheck --ignores=@babel/core,@babel/preset-env,@babel/preset-typescript,babel-jest,@types/jest",
    "test": "jest test --passWithNoTests"
  },
  "dependencies": {
    "@hapi/joi": "17.1.1",
    "chalk": "3.0.0",
    "date-and-time": "0.11.1",
    "easy-table": "1.1.1",
    "handlebars": "4.7.6",
    "js-yaml": "3.14.0",
    "pretty-ms": "5.1.0",
    "semver": "7.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.10.2",
    "@babel/preset-env": "7.10.2",
    "@babel/preset-typescript": "7.10.1",
    "@types/date-and-time": "0.6.0",
    "@types/easy-table": "0.0.32",
    "@types/hapi__joi": "17.1.2",
    "@types/jest": "26.0.0",
    "@types/js-yaml": "3.12.4",
    "@types/semver": "7.2.0",
    "babel-jest": "26.0.1",
    "jest": "26.0.1",
    "typescript": "3.9.5"
  }
}
